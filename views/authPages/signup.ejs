<html>
	<head>
		<meta charset="utf-8">
		<title>kinconnect-inscription</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- MATERIAL DESIGN ICONIC FONT -->
			<link rel="stylesheet" href="assets/authCss/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
			<link rel="stylesheet" href="assets/authCss/fonts/font-awesome-4.7.0/css/font-awesome.css">
			<link rel="stylesheet" type="text/css" href="assets/authCss/vendor/bootstrap/css/bootstrap.min.css">
			<!--===============================================================================================-->
				<link rel="stylesheet" type="text/css" href="assets/authCss/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
			<!--===============================================================================================-->
				<link rel="stylesheet" type="text/css" href="assets/authCss/vendor/animate/animate.css">
